<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            padding-top: 70px; /* Add space for navbar */
        }
        .table-container {
            max-height: 300px; /* Set max height for tables */
            overflow-y: auto; /* Enable vertical scrolling */
        }
    </style>
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container">
        <a class="navbar-brand" href="/"><%= title %></a>
    </div>
</nav>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h2>Self esteem by screen time</h2>
            <form action="/getselfesteem" method="post">
                <div class="input-group mb-3">
                    <input type="number" class="form-control" id="screen_time" name="screen_time" placeholder="Enter screen time">
                    <button class="btn btn-primary" type="submit">Get Self Esteem Value</button>
                </div>
            </form>
            <div class="table-container">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Self Esteem</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% selfEsteemData.forEach(function(m){ %>
                            <tr>
                                <td><%= m.self_esteem %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="col-md-6">
            <h2>Unhappiness by screen time</h2>
            <form action="/getunhappiness" method="post">
                <div class="input-group mb-3">
                    <input type="number" class="form-control" id="screen_time" name="screen_time" placeholder="Enter screen time">
                    <input type="text" class="form-control" id="category" name="category" placeholder="Enter category">
                    <button class="btn btn-primary" type="submit">Get Unhappiness Value</button>
                </div>
            </form>
            <div class="table-container">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Unhappiness</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% UnhappinessData.forEach(function(m){ %>
                            <tr>
                                <td><%= m.unhappiness %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
